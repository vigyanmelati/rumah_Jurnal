<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaftarJurnalActivity"
    android:background="@drawable/bg_image"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:orientation="vertical"
        android:weightSum="20">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginTop="35dp"
            android:text="View Jurnal"
            android:fontFamily="@font/roboto_bold"
            android:textSize="28dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            />

        <!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/kategori_list"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_weight="1"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginTop="14dp">-->

<!--        </androidx.recyclerview.widget.RecyclerView>-->

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/layout_coordinator"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_list_kontrakan">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/jurnal_list"
                android:layout_width="match_parent"
                android:layout_height="457dp"
                android:layout_marginTop="20dp"
                tools:listitem="@layout/cardview_jurnal">


            </androidx.recyclerview.widget.RecyclerView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>