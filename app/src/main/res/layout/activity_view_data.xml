<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_image"
    tools:context=".CreateDataActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rectangle_2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/createData"
            android:text="Data Jurnal"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="78dp"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/judul_jurna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:gravity="top"
            android:letterSpacing="-0.02"
            android:text="@string/judul_jurnal"
            android:textColor="@color/abu"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/viewJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/rectangle_1" />

        <TextView
            android:id="@+id/nama_jurnal"
            android:layout_width="71dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:gravity="top"
            android:letterSpacing="-0.02"
            android:text="@string/nama_jurnal"
            android:textColor="@color/abu"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/viewNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/rectangle_1"/>

        <TextView
            android:id="@+id/volume_jurnal"
            android:layout_width="71dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:letterSpacing="-0.02"
            android:text="@string/volume"
            android:textColor="@color/abu"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/viewVol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentTop="true"
            android:inputType="number"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/rectangle_1"/>

        <TextView
            android:id="@+id/issn_jurnal"
            android:layout_width="71dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:letterSpacing="-0.02"
            android:text="@string/issn"
            android:textColor="@color/abu"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/viewIssn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/rectangle_1"/>

        <TextView
            android:id="@+id/doi_jurnal"
            android:layout_width="71dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:letterSpacing="-0.02"
            android:text="@string/doi"
            android:textColor="@color/abu"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/viewDoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/rectangle_1"/>

        <TextView
            android:id="@+id/tahun_jurnal"
            android:layout_width="71dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:letterSpacing="-0.02"
            android:text="@string/tahun"
            android:textColor="@color/abu"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/viewTahun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/rectangle_1"/>

        <TextView
            android:id="@+id/penulis_jurnal"
            android:layout_width="71dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:letterSpacing="-0.02"
            android:text="@string/penulis"
            android:textColor="@color/abu"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/viewPenulis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/rectangle_1"/>

        <TextView
            android:id="@+id/kategori"
            android:layout_width="71dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:letterSpacing="-0.02"
            android:text="@string/penulis"
            android:textColor="@color/abu"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/viewKategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/rectangle_1"/>

        <TextView
            android:id="@+id/link"
            android:layout_width="71dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:letterSpacing="-0.02"
            android:text="Link Jurnal"
            android:textColor="@color/abu"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/viewLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/rectangle_1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:width="350dp"
            android:height="64dp"
            android:backgroundTint="@color/ungu"
            android:text="View PDF"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="15dp" />

    </LinearLayout>

        </ScrollView>

</LinearLayout>