<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_image"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/buat_akunbaru"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="144dp" />

    <EditText
        android:id="@+id/regis_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/frame"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="287dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:hint="@string/nama"
        android:paddingLeft="20dp"/>

    <EditText
        android:id="@+id/regis_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/frame"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="287dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:hint="@string/email"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/regis_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/frame"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="380dp"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:hint="@string/pass"
        android:paddingLeft="10dp"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tulisan_register"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="596dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="342dp"
        android:height="64dp"
        android:backgroundTint="@color/ungu"
        android:text="@string/daftar"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="483dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pengguna"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="596dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="60dp"/>
</LinearLayout>